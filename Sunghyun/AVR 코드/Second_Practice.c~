#include <io.h>
#include <delay.h>

void main(void)
{
    int j = 0;
    int i = 0;
    int num[10][2] = {{0xfe,0x81},{0xff,0xf5},{0xfe,0x4d},{0xfe,0x61},{0xff,0x31},{0xfe,0x23},{0xfe,0x03},{0xfe,0xb1}
    , {0xfe,0x02},{0xfe, 0x22}};                    
    
    DDRB = 0x01;
    DDRA = 0xff;    
    DDRC = 0xff;   
    
    while (1)
    {            
        
        for(;i<10;i++) {
            
            PORTB = num[i][0];
            PORTA = num[i][1];   
            delay_ms(1000);
        }  
        
        i = 0;
    }       
}
